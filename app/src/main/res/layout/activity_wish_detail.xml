<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wish_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f5baba"
    tools:context="musictag.hytham1.com.mywishlist2.WishDetailActivity">
 <TextView
     android:id="@+id/tv_detailsTitles"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="160dp"
     android:text="My Wish"
     android:textStyle="bold"
     android:textSize="20sp"
     android:textColor="#1b1919"
     android:textAlignment="center"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_detailsTitles"
        android:text="myWishes..."
        android:layout_margin="20sp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="#e90808"
        android:textAlignment="center"
        android:gravity="center"
        android:id="@+id/tv_detailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_detailsDateText"
        android:layout_below="@+id/tv_detailsTextView"
        android:layout_alignParentEnd="true"
        android:text="Date"
        android:textColor="#080808"
        android:textStyle="italic"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/deleteButton"
        android:layout_below="@+id/tv_detailsDateText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/newEntry"
        android:layout_below="@+id/deleteButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="New Entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="newEntry"/>
</RelativeLayout>
